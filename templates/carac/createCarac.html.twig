{% extends 'base.html.twig' %}

{% block title %}Ajouter Plat!{% endblock %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card w-50">
                <div class="card-body">
                    <h5 class="card-title">Ajouter Caracteristiques Sportifs </h5>

                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Taille</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.taille,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.taille,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Poids</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.poids,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.poids,{'attr':{'class':'text-danger'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Age</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.age,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.age,{'attr':{'class':'text-danger'}}) }}



                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>

{% endblock %}
