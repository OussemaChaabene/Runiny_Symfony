{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card w-50">
                <div class="card-body">
                    <h5 class="card-title">Modification Plat </h5>

                    {{ form_start(f) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">Poids</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.poids,{'attr':{'class':'form-control'}}) }}

                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label">Calories</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.calories,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Sodium</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.sodium,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Protein</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.protein,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Cholesterol</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.cholesterol,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Carbohydrate</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.carbohydrate,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}