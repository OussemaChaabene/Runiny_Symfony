{% extends 'base.html.twig' %}

{% block title %}Regime{% endblock %}

{% block body %}
    <div class="superx">
    <h1>Regime</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Titre</th>
                <td>{{ regime.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ regime.type }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ regime.niveau }}</td>
            </tr>
            <tr>
                <th>Plats</th>
                <td><ul>
                        {% for plat in regime %}
                            <li> {{ plat.nom }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('app_regime_index') }}">back to list</a>

    <a href="{{ path('app_regime_edit', {'id': regime.id}) }}">edit</a>

    {{ include('regime/_delete_form.html.twig') }}
    </div>
{% endblock %}
