{% extends 'base.html.twig' %}

{% block title %}Regime index{% endblock %}

{% block body %}
    <div class="superx">
    <h1>Regime index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for regime in regimes %}
            <tr>
                <td>{{ regime.id }}</td>
                <td>{{ regime.titre }}</td>
                <td>{{ regime.type }}</td>
                <td>{{ regime.niveau }}</td>
                <td>
                    <a href="{{ path('app_regime_show', {'id': regime.id}) }}">show</a>
                    <a href="{{ path('app_regime_edit', {'id': regime.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_regime_new') }}">Create new</a>
    </div>
{% endblock %}
