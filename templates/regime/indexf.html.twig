{% extends 'basef.html.twig' %}

{% block title %}Regimes{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <!--search_card-->
            <div class="">
                <div class="add_utf_listing_section ">
                    <div class="utf_add_listing_part_headline_part">
                        <h3><i class="sl sl-icon-magnifier"></i> Recherche</h3>
                    </div>
                    <div class="row with-forms">
                        <div class="col-md-12">
                            <div class="form-group lis-relative">
                                <div class="dataTable-top w-25 position-absolute top-0 end-0">
                                    {{ form_start(form) }}
                                    <div class="row">
                                        <div class="search-field" >{{ form_row(form.nom) }}</div>
                                        <div class="form-group col-sm">
                                            <button type="submit" class="button add-pricing-list-item">Rechercher</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--search_card_end-->

            <div class="row">
                {% for regime in regimes %}

                <div class="col-lg-12 col-md-12">
                    <div class="utf_listing_item-container list-layout"> <a href="listings_single_page_1.html" class="utf_listing_item">
                            <div class="utf_listing_item-image">
                                <img src="images/utf_listing_item-01.jpg" alt="">

                            </div>
                            <div class="utf_listing_item_content">
                                <div class="utf_listing_item-inner">
                                    <h3><strong>{{ regime.titre }} </strong></h3>
                                    <span><i class="fa fa-bullseye"></i>{{ regime.type }}</span>
                                    {% if regime.niveau ==1 %}
                                    <div class="utf_star_rating_section" data-rating="1">
                                        <div class="utf_counter_star_rating">(1)</div>
                                        </div>
                                    {% elseif regime.niveau ==2 %}
                                    <div class="utf_star_rating_section" data-rating="2">
                                        <div class="utf_counter_star_rating">(2)</div>
                                    </div>
                                    {% elseif regime.niveau==3 %}
                                    <div class="utf_star_rating_section" data-rating="3">
                                        <div class="utf_counter_star_rating">(3)</div>
                                    </div>
                                    {% elseif regime.niveau==4%}
                                    <div class="utf_star_rating_section" data-rating="4">
                                        <div class="utf_counter_star_rating">(4)</div>
                                    </div>
                                    {% else%}
                                    <div class="utf_star_rating_section" data-rating="5">
                                        <div class="utf_counter_star_rating">(5)</div>
                                    </div>
                                    {% endif %}
                                    <strong>Plats : </strong>{% for p in regime.plat %}
                                    <strong> - </strong>{{ p.nom }}<strong> : </strong>{{ p.calories }}
                                    {% endfor %}
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}


            <br>
            {{ knp_pagination_render(regimes) }}

            <br>
            <a href="{{ path('app_regime_new') }}" class="button add-pricing-list-item utf_right_side"><i class=" fa-plus-square-o"> </i>Creer un regime</a>
        </div>
    </div>

{% endblock %}
