{% extends 'index.html.twig' %}

{% block title %}Abonnement {% endblock %}

{% block body %}
    <h1>Abonnement index</h1>
    <td>
        <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
            <img src="https://img.icons8.com/nolan/344/google-web-search.png" style="width:50px;height:50px;"/></p>
    </td>

    <table class="table">
        <thead>

            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
        <tbody id="myTable">
        {% for categorieabo in categorieabos %}
            <tr>
                <td>{{ categorieabo.id }}</td>
                <td>{{ categorieabo.Nom }}</td>
                <td>
                    <a href="{{ path('app_categorieabo_show', {'id': categorieabo.id}) }}">show</a>
                    <a href="{{ path('app_categorieabo_edit', {'id': categorieabo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}

        <tbody id="search">

        </tbody>
        </tbody>
    </table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
