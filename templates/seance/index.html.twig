{% extends 'index.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>TypeSeance</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.typeSeance }}</td>
                <td>{{ seance.date ? seance.date|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('app_seance_show', {'idSeance': seance.idSeance}) }}">show</a>
                    <a href="{{ path('app_seance_edit', {'idSeance': seance.idSeance}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_seance_new') }}">Create new</a>
    <a href="{{ path('app_reservation_liste') }}">Imprimer</a>
{% endblock %}
