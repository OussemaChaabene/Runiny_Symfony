{% extends 'indexx.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
    <h1>Liste des Evenements </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date evenement</th>
                <th>Description </th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.dateeven ? event.dateeven|date('Y-m-d') : '' }}</td>
                <td>{{ event.descri }}</td>
                <td>{{ event.nom }}</td>
                <td>{{ event.prix }}</td>


            <td><a  class="btn btn-outline-primary" href="{{ path('app_reservation_liste') }}">Participer</a></td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>


    {{ knp_pagination_render(events) }}
{% endblock %}
