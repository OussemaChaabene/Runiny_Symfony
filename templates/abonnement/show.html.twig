{% extends 'index.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}


    <h1>Categorie</h1>
    <td>
        <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
            <img src="https://img.icons8.com/nolan/344/google-web-search.png" style="width:50px;height:50px;"/></p>
    </td>

    <table class="table">
        <tbody>
        <tbody>
        <tbody id="myTable">
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>AbNom</th>
                <td>{{ abonnement.abNom }}</td>
            </tr>
            <tr>
                <th>AbType</th>
                <td>{{ abonnement.abType }}</td>
            </tr>
            <tr>
                <th>AbPrix</th>
                <td>{{ abonnement.abPrix }}</td>
            </tr>
        </tbody>
        <tbody id="search">

        </tbody>
        </tbody>
    </table>

    <a href="{{ path('app_abonnement_index') }}">back to list</a>

    <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">edit</a>

    <a href="{{ path('DownloadProduitsData') }}" class="btn btn-dark waves-effect waves-light">Download PDF</a>

    {{ include('abonnement/_delete_form.html.twig') }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
