{% extends 'index.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>IdUser</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Adress</th>
				<th>DateNais</th>
				<th>Role</th>
				<th>Login</th>
				<th>Password</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.idUser }}</td>
					<td>{{ user.nom }}</td>
					<td>{{ user.prenom }}</td>
					<td>{{ user.adress }}</td>
					<td>{{ user.dateNais }}</td>
					<td>{{ user.role }}</td>
					<td>{{ user.login }}</td>
					<td>{{ user.password }}</td>
					<td>
						<a href="{{ path('app_user_show', {'idUser': user.idUser}) }}">show</a>
						<a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
